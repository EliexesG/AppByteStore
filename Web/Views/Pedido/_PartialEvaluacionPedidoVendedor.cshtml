@model Infraestructure.Models.Evaluacion

<div class="p-3 rounded-4 bg-body card mb-4 shadow-lg bg-gradient">
    <h3 class="card-title text-white-50 mb-3 fs-4 ps-3">
        @for (int i = 1; i <= 5; i++)
        {
            if (i <= Model.Escala)
            {
                <i class="fa-solid fa-star"></i>
            }
            else
            {
                <i class="fa-regular fa-star"></i>
            }
        }
        (@Html.DisplayFor(model => model.Escala) estrellas evaluadas)
    </h3>
    <h4 class="card-text fs-5 text-white mb-4 ps-3">@Model.Comentario</h4>
</div>